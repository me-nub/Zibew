        <img src="../assets/images/users/user-10.jpg" class="thumb-sm rounded-circle mr-2"><a asp-action="Details" asp-route-Id=@item.Id>*@
                                    <img src="@Html.DisplayFor(modelItem => item.ImagePath)" alt="" class="thumb-sm rounded-circle mr-2">
                                    <a asp-action="Details" class="Name" asp-route-Id=@item.Id style="text-transform: capitalize;">@Html.DisplayFor(modelItem => item.Name)</a>
     
                                </td>
                                @*<td> @Html.DisplayFor(modelItem => item.Name)</td>*@
