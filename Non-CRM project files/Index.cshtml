            @Html.DisplayFor(modelItem => item.AddressLine2)<br>
            @Html.DisplayFor(modelItem => item.AddressStreet)<br>
            @Html.DisplayFor(modelItem => item.AddressCity)<br>
        <td>@Html.DisplayFor(modelItem => item.AddressState)</td>
        <td>@Html.DisplayFor(modelItem => item.AddressCountry)</td>*@
                                @*<td>@Html.DisplayFor(modelItem => item.AddressZipcode)</td>*@
                               
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.FacebookProfile))
                                    {
                                        <a href="//@item.FacebookProfile" target="_blank"><i class="w3-large fab fa-facebook"></i></a>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(item.TwitterProfile))
                                    {
                                        <a href="//@item.TwitterProfile" target="_blank"><i style="color:deepskyblue" class="w3-large fab fa-twitter-square"></i></a>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(item.InstagramProfile))
